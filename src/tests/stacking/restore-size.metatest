# Check that X11 clients restore to their right size after unmaximize
# or untile

new_client x x11
create x/1 csd

resize x/1 500 400
maximize x/1
show x/1

wait

assert_size x/1 MONITOR_WIDTH MONITOR_HEIGHT

unmaximize x/1
wait

assert_size x/1 500 400

resize x/1 300 200
wait
maximize x/1
wait_reconfigure
unmaximize x/1
wait_reconfigure

assert_size x/1 300 200

tile x/1 right
wait_reconfigure
assert_size x/1 MONITOR_WIDTH/2 MONITOR_HEIGHT

untile x/1
wait_reconfigure
assert_size x/1 300 200

tile x/1 left
wait_reconfigure
assert_size x/1 MONITOR_WIDTH/2 MONITOR_HEIGHT

maximize x/1
wait_reconfigure
assert_size x/1 MONITOR_WIDTH MONITOR_HEIGHT

unmaximize x/1
wait_reconfigure
assert_size x/1 300 200

