import sys
import time
import pypredict

def main():

    args = sys.argv[1:]
    for fn in args:
        model = pypredict.DynamicModel()

        t = time.time()
        model.load(fn)
        t = time.time() - t

        print("{:30} {:35} {:6.2f}MB {:5.2f}s" \
              .format(fn,
                      " ".join(["{}: {:7}".format(i+1, c) for i,c in enumerate(model.get_counts()[0])]),
                      sum(model.memory_size())/2**20,
                      t))

if __name__ == '__main__':
    main()

